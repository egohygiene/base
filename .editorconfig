# .editorconfig - The Final Boss Edition
# Maintains consistent coding styles across IDEs and tools
# See: https://editorconfig.org

root = true

# ───────────────────────────────────────────────────────────────────────────────
# Default settings for all files
# ───────────────────────────────────────────────────────────────────────────────
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# ───────────────────────────────────────────────────────────────────────────────
# Markdown (preserve intentional trailing whitespace for line breaks)
# ───────────────────────────────────────────────────────────────────────────────
[*.md]
trim_trailing_whitespace = false

[*.mdx]
indent_size = 2
trim_trailing_whitespace = false

# ───────────────────────────────────────────────────────────────────────────────
# YAML / YML (commonly 2 spaces)
# ───────────────────────────────────────────────────────────────────────────────
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# ───────────────────────────────────────────────────────────────────────────────
# JSON and related configs (Prettier default: 2–4 spaces)
# ───────────────────────────────────────────────────────────────────────────────
[*.json]
indent_size = 4

[*.jsonc]
indent_size = 4

# Dot-prefixed config files
[.babelrc]
indent_size = 2

[.eslintrc]
indent_size = 2

[.prettierrc]
indent_size = 2

[tsconfig.json]
indent_size = 4

# ───────────────────────────────────────────────────────────────────────────────
# HTML / XML
# ───────────────────────────────────────────────────────────────────────────────
[*.html]
indent_size = 4

[*.xml]
indent_size = 2

# ───────────────────────────────────────────────────────────────────────────────
# CSS / SCSS / LESS / SASS
# ───────────────────────────────────────────────────────────────────────────────
[*.css]
indent_size = 2

[*.scss]
indent_size = 2

[*.sass]
indent_size = 2

[*.less]
indent_size = 2

# ───────────────────────────────────────────────────────────────────────────────
# JavaScript / TypeScript / JSX / TSX
# ───────────────────────────────────────────────────────────────────────────────
[*.js]
indent_size = 4

[*.ts]
indent_size = 4

[*.jsx]
indent_size = 4

[*.tsx]
indent_size = 4

# ───────────────────────────────────────────────────────────────────────────────
# Shell Scripts
# ───────────────────────────────────────────────────────────────────────────────
[*.sh]
indent_size = 4

# ───────────────────────────────────────────────────────────────────────────────
# Python (PEP 8)
# ───────────────────────────────────────────────────────────────────────────────
[*.py]
indent_size = 4

# ───────────────────────────────────────────────────────────────────────────────
# Makefile (must use tabs)
# ───────────────────────────────────────────────────────────────────────────────
[Makefile]
indent_style = tab

# ───────────────────────────────────────────────────────────────────────────────
# Go (standard: tabs)
# ───────────────────────────────────────────────────────────────────────────────
[*.go]
indent_style = tab

# ───────────────────────────────────────────────────────────────────────────────
# Rust
# ───────────────────────────────────────────────────────────────────────────────
[*.rs]
indent_size = 4

# ───────────────────────────────────────────────────────────────────────────────
# Elixir
# ───────────────────────────────────────────────────────────────────────────────
[*.ex]
indent_size = 2

[*.exs]
indent_size = 2

# ───────────────────────────────────────────────────────────────────────────────
# Java / Kotlin / Swift / C / C++ / H / H++
# ───────────────────────────────────────────────────────────────────────────────
[*.java]
indent_size = 4

[*.kt]
indent_size = 4

[*.swift]
indent_size = 4

[*.c]
indent_size = 4

[*.cpp]
indent_size = 4

[*.h]
indent_size = 4

[*.hpp]
indent_size = 4

# ───────────────────────────────────────────────────────────────────────────────
# C#
# ───────────────────────────────────────────────────────────────────────────────
[*.cs]
indent_size = 4

# ───────────────────────────────────────────────────────────────────────────────
# Gradle / Groovy
# ───────────────────────────────────────────────────────────────────────────────
[*.gradle]
indent_size = 4

[*.groovy]
indent_size = 4

# ───────────────────────────────────────────────────────────────────────────────
# SQL
# ───────────────────────────────────────────────────────────────────────────────
[*.sql]
indent_size = 4

# ───────────────────────────────────────────────────────────────────────────────
# Docker / Compose
# ───────────────────────────────────────────────────────────────────────────────
[Dockerfile]
indent_size = 4

[docker-compose.yml]
indent_size = 2

# ───────────────────────────────────────────────────────────────────────────────
# Terraform / HCL
# ───────────────────────────────────────────────────────────────────────────────
[*.tf]
indent_size = 2

[*.hcl]
indent_size = 2

# ───────────────────────────────────────────────────────────────────────────────
# TOML
# ───────────────────────────────────────────────────────────────────────────────
[*.toml]
indent_size = 2

# ───────────────────────────────────────────────────────────────────────────────
# INI / Conf
# ───────────────────────────────────────────────────────────────────────────────
[*.ini]
indent_size = 2

[*.conf]
indent_size = 2

# ───────────────────────────────────────────────────────────────────────────────
# Environment files
# ───────────────────────────────────────────────────────────────────────────────
[*.env]
trim_trailing_whitespace = false
insert_final_newline = true

# ───────────────────────────────────────────────────────────────────────────────
# Text / Ignore / Logs
# ───────────────────────────────────────────────────────────────────────────────
[*.txt]
insert_final_newline = true

[.gitignore]
trim_trailing_whitespace = false
insert_final_newline = true

[.dockerignore]
trim_trailing_whitespace = false
insert_final_newline = true

[*.log]
insert_final_newline = false
trim_trailing_whitespace = false

# ───────────────────────────────────────────────────────────────────────────────
# VS Project files
# ───────────────────────────────────────────────────────────────────────────────
[*.sln]
indent_size = 4

[*.csproj]
indent_size = 2

[*.fsproj]
indent_size = 2

[*.vbproj]
indent_size = 2

# ───────────────────────────────────────────────────────────────────────────────
# CMake
# ───────────────────────────────────────────────────────────────────────────────
[CMakeLists.txt]
indent_size = 2

# ───────────────────────────────────────────────────────────────────────────────
# Web Servers
# ───────────────────────────────────────────────────────────────────────────────
[nginx.conf]
indent_size = 2

[*.nginx]
indent_size = 2

[Caddyfile]
indent_size = 4

# ───────────────────────────────────────────────────────────────────────────────
# Puppet / Bazel / BUILD Files
# ───────────────────────────────────────────────────────────────────────────────
[*.pp]
indent_size = 2

[*.bzl]
indent_size = 2

[BUILD]
indent_size = 2

# ───────────────────────────────────────────────────────────────────────────────
# Ignore minified or vendor files
# ───────────────────────────────────────────────────────────────────────────────
[*.min.js]
indent_style = ignore
indent_size = ignore

[*.min.css]
indent_style = ignore
indent_size = ignore

[**/vendor/**]
indent_style = ignore
indent_size = ignore

[**/external/**]
indent_style = ignore
indent_size = ignore
