{
  "version": 1,
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend"
    },
    {
      "id": "@secretlint/secretlint-rule-git"
    },
    {
        "id": "@secretlint/secretlint-rule-npm"
    },
    {
        "id": "@secretlint/secretlint-rule-no-homedir"
    },
    {
        "id": "@secretlint/secretlint-rule-no-dotenv",
        "options": {
            "allowFileNames": [".env.local", ".env.test", ".env.development", ".env.dev"]
        }
    },
    {
        "id": "@secretlint/secretlint-rule-github"
    },
    {
        "id": "@secretlint/secretlint-rule-gcp"
    },
    {
        "id": "@secretlint/secretlint-rule-database-connection-string"
    },
    {
        "id": "@secretlint/secretlint-rule-secp256k1-privatekey"
    },
    {
        "id": "@secretlint/secretlint-rule-openai",
        "allowMessageIds": ["OPENAI_TOKEN"],
        "options": {
            "allows": ["/IT_IS_PUBLIC/"]
        }
    },
    {
        "id": "@secretlint/privatekey"
    },
    {
        "id": "@secretlint/secretlint-rule-aws"
    },
    {
        "id": "@secretlint/secretlint-rule-basicauth"
    },
    {
        "id": "@secretlint/secretlint-rule-pattern",
        "options": {
            "patterns": [{
                "name": "password",
                "pattern": "/password\\s*=\\s*(?<password>[\\w\\d!@#$%^&(){}\\[\\]:\";'<>,.?\/~`_+-=|]{1,256})\\b.*/"
            }]
        }
    }
  ],
  "allowMessageIds": [],
  "allowSecrets": [],
  "ignore": [
    "**/*.md",
    "**/*.snap",
    "**/*.map",
    "**/CHANGELOG.md",
    "**/LICENSE",
    ".git/**",
    "node_modules/**",
    "dist/**",
    ".next/**",
    "coverage/**",
    "tmp/**",
    "**/*.min.*"
  ]
}
